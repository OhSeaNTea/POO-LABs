#include <iostream>
#include <string>
using namespace std;

class Camera{
    protected:
    double aria;
   
    public:
    Camera(double A=0){
        aria=A;
    }
   
    void SetAria(){
        double A;
        cout << "Introdu suprafata camerei (metri patrati): \n";
        cin >> aria;
    }
   
    double GetAria(){
        return aria;
    }
};
class Ap_O_Odaie:public Camera{
    protected:
    double aria_bucatarie;
    int etaj;
   
    public:
    Ap_O_Odaie(double A_buc=0,double a=0, int etaj=0){
        aria_bucatarie=A_buc;
        this->etaj=etaj;
        aria=a;
    }
    
    void SetApartament(){
        SetAria();
        cout << "Introdu suprafata bucatariei (metri patrati): \n";
        cin >> aria_bucatarie;
        cout << "Introdu etajul: \n";
        cin >> etaj;
    }
   
    double GetBucatarie(){
        return aria_bucatarie;
    }
   
    double GetEtaj(){
        return etaj;  
    }
};

class Adresa : public Ap_O_Odaie{
    string adresa;
    public:
    Adresa(){
    }

    void SetAdresa(){
        cout << "Introdu adresa:\n";
        cin >> adresa;
    }
    
    string GetAdresa(){
        return adresa;
    }
};

int main(){
    Ap_O_Odaie Ap1;
    Adresa Adr;
    Adr.SetAdresa();
    
    Adr.SetApartament();
    cout <<"Adreasa\n" << Adr.GetAdresa()<<endl;
    cout << "Aria Bucatariei:\n" << Adr.GetBucatarie() << endl;
    cout << "Etajul:\n" << Adr.GetEtaj() << endl;
   
}
