#include <iostream>
#include <string>
using namespace std;

class Camera{
    double aria;
   
    public:
    Camera(double A=0){
        aria=A;
    }
   
    void SetAria(){
        double A;
        cout << "Introdu suprafata camerei: \n";
        cin >> aria;
    }
   
    double GetAria(){
        return aria;
    }
};
class Ap_O_Odaie:public Camera{
    double aria_bucatarie;
    int etaj;
   
    public:
    Ap_O_Odaie(double A_buc=0, int etaj=0){
        aria_bucatarie=A_buc;
        this->etaj=etaj;
    }
    void SetApartament(){
        SetAria();
        cout << "Introdu suprafata bucatariei: \n";
        cin >> aria_bucatarie;
        cout << "Introdu etajul: \n";
        cin >> etaj;
    }
   
    double GetBucatarie(){
        return aria_bucatarie;
    }
   
    double GetEtaj(){
        return etaj;  
    }
};
class Adresa : public Ap_O_Odaie{
    string adresa;
    public:
    Adresa(){
    }
    void SetAdresa(){
        cout << "Introdu adresa:\n";
        cin >> adresa;
    }
    string GetAdresa(){
        return adresa;
    }

};
int main(){
    Adresa Ad;
    Ad.SetAdresa();
    cout << Ad.GetAdresa();
    Camera C;
    Ap_O_Odaie A;
    C.SetAria();
    A.SetApartament();
    cout << A.GetBucatarie() << endl;
    cout << A.GetEtaj() << endl;
   
    cout << C.GetAria();    
}
